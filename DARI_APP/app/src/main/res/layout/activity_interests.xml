<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".Interest.Interests_Activity"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageButton
            android:id="@+id/interests_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:text="관심사 설정"
            android:textColor="@color/black"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/next"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button2_001194"
            android:text="설정완료"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나의 관심사"
        android:textSize="18dp"
        android:textColor="#000000"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/iterests_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        android:orientation="horizontal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="관심사 목록"
        android:textSize="18dp"
        android:textColor="#000000"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
                <LinearLayout
                    android:layout_marginRight="60dp"
                    android:id="@+id/i1"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                <ToggleButton
                    android:id="@+id/A"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:textOff=""
                    android:textOn=""
                    android:background="@drawable/toggle_running"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="러닝"
                    android:textSize="20dp"/>
                </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/i2"
                android:layout_toRightOf="@id/i1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ToggleButton
                    android:id="@+id/B"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:textOff=""
                    android:textOn=""
                    android:background="@drawable/toggle_game"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="게임"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="60dp"
                android:orientation="vertical"
            android:id="@+id/i3"
                android:layout_below="@id/i1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
                <ToggleButton
                    android:id="@+id/C"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:textOff=""
                    android:textOn=""
                    android:background="@drawable/toggle_car"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="자동차"
                    android:textSize="20dp"/>
        </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_below="@id/i2"
                android:layout_toRightOf="@id/i3"
            android:id="@+id/i4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
                <ToggleButton
                    android:id="@+id/D"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:textOff=""
                    android:textOn=""
                    android:background="@drawable/toggle_baking"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="빵만들기"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="50dp"
                android:orientation="vertical"
            android:id="@+id/i5"
                android:layout_below="@id/i3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
                <ToggleButton
                    android:id="@+id/E"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:textOff=""
                    android:textOn=""
                    android:background="@drawable/toggle_train"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기차"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_below="@id/i4"
                android:layout_toRightOf="@id/i5"
                android:id="@+id/i6"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ToggleButton
                    android:id="@+id/F"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:textOff=""
                    android:textOn=""
                    android:background="@drawable/toggle_eat"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="식당 투어"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="50dp"
                android:orientation="vertical"
                android:layout_below="@id/i5"
                android:id="@+id/i7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ToggleButton
                    android:id="@+id/G"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:textOff=""
                    android:textOn=""
                    android:background="@drawable/toggle_movie"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="영화"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_below="@id/i6"
                android:layout_toRightOf="@id/i7"
                android:id="@+id/i8"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ToggleButton
                    android:id="@+id/H"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:textOff=""
                    android:textOn=""
                    android:background="@drawable/toggle_cycle"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="자전거"
                    android:textSize="20dp"/>
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

        <ImageButton
            android:id="@+id/change_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="20dp"
            android:background="@drawable/change_text" />
</FrameLayout>


</LinearLayout>