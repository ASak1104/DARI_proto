<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".Interest.Interests_text_Activity"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/interests_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/arrow"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관심사 설정"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_centerInParent="true"/>
        <ImageButton
            android:id="@+id/next"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/next"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나의 관심사"
        android:textColor="#000000"
        android:textSize="18dp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/iterests_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        android:orientation="horizontal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="관심사 목록"
        android:textSize="18dp"
        android:textColor="#000000"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top">
                <TableRow>
                <ToggleButton
                    android:id="@+id/A"
                    android:textSize="21dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="14dp"
                    android:textOff="러닝"
                    android:textOn="러닝"
                    android:textColor="@drawable/text_change"
                    android:background="@drawable/toggle_text"

                    />
                <ToggleButton
                    android:id="@+id/B"
                    android:textSize="21dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="14dp"
                    android:textOff="게임"
                    android:textOn="게임"
                    android:textColor="@drawable/text_change"
                    android:background="@drawable/toggle_text"
                    />
                <ToggleButton
                    android:id="@+id/C"
                    android:textSize="21dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="14dp"
                    android:textOff="자동차"
                    android:textOn="자동차"
                    android:textColor="@drawable/text_change"
                    android:background="@drawable/toggle_text"/>
                </TableRow>
            <TableRow>
                <ToggleButton
                    android:id="@+id/D"
                    android:textSize="21dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="14dp"
                    android:textOff="빵만들기"
                    android:textOn="빵만들기"
                    android:textColor="@drawable/text_change"
                    android:background="@drawable/toggle_text"
                    />
                <ToggleButton
                    android:id="@+id/E"
                    android:textSize="21dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="14dp"
                    android:textOff="기차"
                    android:textOn="기차"
                    android:textColor="@drawable/text_change"
                    android:background="@drawable/toggle_text"
                    />


                    <ToggleButton
                        android:id="@+id/F"
                        android:textSize="21dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="14dp"
                        android:textOff="식당투어"
                        android:textOn="식당투어"
                        android:textColor="@drawable/text_change"
                        android:background="@drawable/toggle_text"
                        />
            </TableRow>
                <TableRow>
                    <ToggleButton
                        android:id="@+id/G"
                        android:textSize="21dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="14dp"
                        android:textOff="영화"
                        android:textOn="영화"
                        android:textColor="@drawable/text_change"
                        android:background="@drawable/toggle_text"
                        />
                    <ToggleButton
                        android:id="@+id/H"
                        android:textSize="21dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="14dp"
                        android:textOff="자전거"
                        android:textOn="자전거"
                        android:textColor="@drawable/text_change"
                        android:background="@drawable/toggle_text"
                        />
                </TableRow>



            </TableLayout>
    </ScrollView>
    <ImageButton
        android:id="@+id/change_img"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/change_img"/>
</FrameLayout>


</LinearLayout>