<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".Interest.Interests_text_Activity"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageButton
            android:id="@+id/interests_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:text="관심사 설정"
            android:textColor="@color/black"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/next"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="설정완료"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/button2_001194"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="나의 관심사"
        android:textColor="#000000"
        android:textSize="18dp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/iterests_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        android:orientation="horizontal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:text="관심사 목록"
        android:textColor="#000000"
        android:textSize="18dp" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top">

            <TableRow>

                <ToggleButton
                    android:id="@+id/A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/toggle_text"
                    android:padding="14dp"
                    android:textColor="@drawable/text_change"
                    android:textOff="러닝"
                    android:textOn="러닝"
                    android:textSize="21dp"

                    />

                <ToggleButton
                    android:id="@+id/B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/toggle_text"
                    android:padding="14dp"
                    android:textColor="@drawable/text_change"
                    android:textOff="게임"
                    android:textOn="게임"
                    android:textSize="21dp" />

                <ToggleButton
                    android:id="@+id/C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/toggle_text"
                    android:padding="14dp"
                    android:textColor="@drawable/text_change"
                    android:textOff="자동차"
                    android:textOn="자동차"
                    android:textSize="21dp" />
            </TableRow>

            <TableRow>

                <ToggleButton
                    android:id="@+id/D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/toggle_text"
                    android:padding="14dp"
                    android:textColor="@drawable/text_change"
                    android:textOff="빵만들기"
                    android:textOn="빵만들기"
                    android:textSize="21dp" />

                <ToggleButton
                    android:id="@+id/E"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/toggle_text"
                    android:padding="14dp"
                    android:textColor="@drawable/text_change"
                    android:textOff="기차"
                    android:textOn="기차"
                    android:textSize="21dp" />


                <ToggleButton
                    android:id="@+id/F"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/toggle_text"
                    android:padding="14dp"
                    android:textColor="@drawable/text_change"
                    android:textOff="식당투어"
                    android:textOn="식당투어"
                    android:textSize="21dp" />
            </TableRow>

            <TableRow>

                <ToggleButton
                    android:id="@+id/G"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/toggle_text"
                    android:padding="14dp"
                    android:textColor="@drawable/text_change"
                    android:textOff="영화"
                    android:textOn="영화"
                    android:textSize="21dp" />

                <ToggleButton
                    android:id="@+id/H"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/toggle_text"
                    android:padding="14dp"
                    android:textColor="@drawable/text_change"
                    android:textOff="자전거"
                    android:textOn="자전거"
                    android:textSize="21dp" />
            </TableRow>


        </TableLayout>
    </ScrollView>
    <ImageButton
        android:id="@+id/change_img"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/change_img"/>
</FrameLayout>
</LinearLayout>